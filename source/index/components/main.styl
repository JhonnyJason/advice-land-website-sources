#hero-section
    width 100%
    height 80vh
    background-image: url('img/hero1.jpg')
    background-size: cover
    background-repeat: no-repeat
    background-position center
    position relative
    border-bottom: solid 30px cd-flash

    h1 
        position absolute
        top calc(50% + 7px)
        left 50%
        transform translate(-50%, -50%)
        font-size: 47px
        text-shadow: 0 2px 5px #000
        color #fff
        width fit-content
        text-align: left
        span
            font-weight bold
            color cd-flash
            padding-left 20px
            
#recommendation-section
    max-width: max-content-width
    box-sizing: border-box
    width calc(100% - 20px)
    margin auto
    padding 210px 10px
    display grid
    grid-template-columns:  1fr
    grid-row-gap: 90px
    grid-column-gap: 30px

    .article-preview
        position relative
        background-color: cd-bright
        height 240px
        border-bottom solid 30px cd-flash
        filter: drop-shadow(1px 1px 2px cd-flash)
        // border solid 2px cd-flash
        background-image: url("img/hero1.jpg")
        background-size cover
        background-repeat: no-repeat
        background-position center

        h2
            position absolute
            top calc(50% + 15px)
            left 50%
            transform translate(-50%, -50%)
            color white
            // filter: drop-shadow(0 2px 2px black)
            padding 20px           
            width 100%
            box-sizing: border-box
            background-color #415B4E66

            

    #entry1.article-preview
        // background-image: url("https://hackmd.io/_uploads/ryGzABeqc.jpg")
        background-image: url("img/coffee-2.jpg")

    #entry2.article-preview
        background-image: url("img/coffee-not-coffee.jpg")

@media screen and (min-width: 640px)
    #hero-section
        h1
            font-size 72px
    #recommendation-section
        grid-template-columns: 1fr 1fr

@media screen and (min-width: 960px)
    #recommendation-section
        grid-template-columns: 1fr 1fr 1fr
