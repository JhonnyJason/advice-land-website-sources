// globalstyles styles

/*==========================================================
Color Theme
==========================================================*/
cd-bright = white
cd-flash = #44D4F3
cd-flash = #11A7A5
cd-flash = #08F1E0
cd-dark = #0D1117

/*==========================================================
Global Variables
==========================================================*/
max-content-width = 900px
mobile-side-padding = 15px


/*==========================================================
General Tag Styles
==========================================================*/
body
    background-color cd-bright
    color cd-bright
    font-family: Arial, Helvetica, sans-serif
    text-align: center
    font-size: 15pt
    width 100%
    overflow hidden
    overflow-y: auto

h1
    font-size: 19pt
h2
    font-size: 17pt
p
    font-size: 15pt
